<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtEmpresaRuta"
        android:layout_width="222dp"
        android:layout_height="30dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/imgFav"
        app:layout_constraintTop_toTopOf="@+id/imgFav" />

    <TextView
        android:id="@+id/txtPrecioRuta"
        android:layout_width="108dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/imgFav"
        app:layout_constraintStart_toEndOf="@+id/imgFav"
        app:layout_constraintTop_toBottomOf="@+id/btnVizualizarRuta" />

    <TextView
        android:id="@+id/txtNumeroRuta"
        android:layout_width="109dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/txtPrecioRuta"
        app:layout_constraintTop_toTopOf="@+id/txtPrecioRuta" />

    <Button
        android:id="@+id/btnVizualizarRuta"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/imgFav"
        app:layout_constraintTop_toBottomOf="@+id/txtEmpresaRuta" />

    <Button
        android:id="@+id/btnEliminarRuta"
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableStart="@android:drawable/ic_menu_delete"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/btnVizualizarRuta"
        app:layout_constraintStart_toEndOf="@+id/btnVizualizarRuta"
        app:layout_constraintTop_toBottomOf="@+id/txtEmpresaRuta" />

    <ImageView
        android:id="@+id/imgFav"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>